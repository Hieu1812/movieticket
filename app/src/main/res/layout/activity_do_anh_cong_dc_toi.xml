<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.DoAnhCongDcToi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="bottom|end">
            <!-- nút quay trở lại-->
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:drawableTop="@drawable/back"
                android:gravity="center"
                android:backgroundTint="#d5dedb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin phim"
                    android:textSize="23dp"
                    android:padding="3dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d5dedb"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imgDoAnhCongDcToi"
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:src="@drawable/phim2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phim: Đố anh còng được tôi"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thể loại: Hài, hình sự, hành động"
                    android:textStyle="italic"
                    android:textSize="21dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời Lượng: 118 phút"
                    android:textSize="18dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/design_default_color_error"
                        android:text="18+"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Phim dành cho người xem từ 18 tuổi trở lên"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- button yêu thích-->
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="68dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:backgroundTint="#FFFFFF"
                        android:drawableTop="@drawable/yeu_thich"
                        android:text="Thích"
                        android:textColor="@color/black"/>
                    <!-- button trailer-->
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="68dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:backgroundTint="#FFFFFF"
                        android:drawableTop="@drawable/trailer"
                        android:text="Trailer"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Tình trạng: Đã chiếu"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#fc0313"/>
            <!-- button đặt vé-->
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Đặt vé"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung phim"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Các thanh tra kỳ cựu đã hoạt động trở lại! Thám tử Seo Do-cheol và đội điều tra tội phạm nguy hiểm của anh ấy không ngừng truy lùng tội phạm cả ngày lẫn đêm. Nhận một cuộc sát hại giáo sư , đội thanh tra nhận ra những mối liên quan đến các vụ án trong quá khứ nảy sinh những nghi ngờ về một kẻ giết người hàng loạt... Để giải quyết mối đe dọa ngày càng leo thang, nhóm đã kết nạp 1 sĩ quan tân binh trẻ Park Sun-Woo, dẫn đến những khúc mắc và đầy rẫy những bất ngờ."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đạo diễn và Diễn viên "
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/jung_hae_in"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Jung-Hae-In"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/hwang_jung_min"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Hwang-Jung-min"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/jang_yoon_ju"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Jang-Yoon-Ju"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>