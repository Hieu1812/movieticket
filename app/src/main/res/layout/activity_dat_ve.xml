<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Dat_ve">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="bottom|end">
            <!-- nút quay trở lại-->
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:drawableTop="@drawable/back"
                android:gravity="center"
                android:backgroundTint="#d5dedb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chọn lịch chiều và ghế"
                    android:textSize="23dp"
                    android:padding="3dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d5dedb"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Thời gian:"
                android:textStyle="bold"
                android:textSize="17dp" />
            <!-- button đặt vé-->
            <Button
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="20:00"
                android:layout_marginLeft="20dp"
                android:background="#d5dfed" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Chọn ghế:"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
<!--        Hàng 1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="H1"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="A"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="B"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="C"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
<!--        Hàng2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="H2"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="A"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="B"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="C"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <!--        Hàng3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="H3"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="A"
                android:backgroundTint="@color/colorred"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="B"
                android:backgroundTint="@color/colorred"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="C"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <!--        Hàng4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="H4"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="A"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="B"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="C"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <!--        Hàng5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="H5"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="A"
                android:backgroundTint="@color/colorgreen"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="B"
                android:backgroundTint="@color/colorblue"
                android:layout_marginLeft="20dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="C"
                android:backgroundTint="@color/colorblue"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorgreen"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghế trống"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorblue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã chọn"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorred"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã bán"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Chọn đồ uống:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTop="@drawable/nuoc_cam"
                android:gravity="center"
                android:backgroundTint="#d5dedb"
                android:layout_marginLeft="40dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTop="@drawable/pepsi"
                android:gravity="center"
                android:backgroundTint="#d5dedb"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:text="Nước cam"
                android:layout_marginLeft="35dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="Pepsi"
                android:layout_marginLeft="17dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Chọn đồ ăn:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTop="@drawable/popcorn"
                android:gravity="center"
                android:backgroundTint="#d5dedb"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Bỏng"
                android:layout_marginLeft="47dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center">
            <Button
                android:id="@+id/payButton"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Thanh toán"
                android:gravity="center" />

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>